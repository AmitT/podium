<?xml version="1.0"?>
<ruleset name="Podium">
    <description>
        Podium Coding Standards
    </description>
    <!-- Exclude wp dev-lib -->
    <exclude-pattern>
        dev-lib/*
    </exclude-pattern>
    <!-- Exclude plugins folder -->
    <exclude-pattern>
        plugins/*
    </exclude-pattern>
    <!-- Use PSR-2 as a base -->
    <rule ref="PSR2">
    </rule>
    <!-- Allow braces on same line for named functions -->
    <rule ref="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnSameLine">
    </rule>
    <!-- Allow multiple PHP statements in the same line -->
    <rule ref="Generic.Formatting.DisallowMultipleStatements.SameLine">
    </rule>
    <!-- Disable PSR-2 indentation rules that are buggy with 2 spaces -->
    <rule ref="PSR2.ControlStructures.SwitchDeclaration.BreakIndent">
    </rule>
    <!-- Allow tab indentation -->
    <rule ref="Generic.WhiteSpace.DisallowTabIndent.TabsUsed">
    </rule>
</ruleset>
