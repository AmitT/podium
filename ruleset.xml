<?xml version="1.0"?>
<ruleset name="Podium">
    <description>
        Podium Coding Standards
    </description>
    <!-- Exclude wp dev-lib -->
    <exclude-pattern>
        dev-lib/*
    </exclude-pattern>
    <!-- Exclude vendor folder -->
    <exclude-pattern>
        inc/vendor/*
    </exclude-pattern>
    <!-- Show colors in console -->
    <arg value="-colors">
    </arg>
    <!-- Show sniff codes in all reports -->
    <arg value="s">
    </arg>
    <!-- Use PSR-2 as a base -->
    <rule ref="PSR2">
    </rule>
</ruleset>
