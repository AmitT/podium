<?xml version="1.0"?>
<ruleset name="Podium">
    <description>
        Podium Coding Standards
    </description>
    <!-- Exclude wp dev-lib -->
    <exclude-pattern>
        dev-lib/*
    </exclude-pattern>
    <!-- Exclude plugins folder -->
    <exclude-pattern>
        plugins/*
    </exclude-pattern>
    <!-- Use PSR-2 as a base -->
    <rule ref="PSR2">
    </rule>
</ruleset>
